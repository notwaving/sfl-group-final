
<%= form_for([@group, @gardener, @education]) do |g| %>
<div class="panel panel-default">
<%= render "shared/error_messages", :target => @education %>

    <div class="btn-group btn-group-justified">
        <h4> What is the highest level of ecducation you have completed? </h4>
            
            <%= g.hidden_field :level, value: " " %>

            <%= g.radio_button :level, :not_sure %>
            <%= g.label :level_not_sure, "Not sure" %>
                <br/>

            <%= g.radio_button :level, :none %>
            <%= g.label :level_none, "None" %>
                 <br/>

            <%= g.radio_button :level, :gr_1_to_3 %> 
            <%= g.label :level_gr_1_to_3, "Grade 1-3 (Sub A - Standard 1)" %>
                 <br/>

            <%= g.radio_button :level, :gr_4_to_7 %>
            <%= g.label :level_gr_4_to_7, "Grade 4-7 (Standard 2-5)" %>
                <br/>

            <%= g.radio_button :level, :gr_8_to_9 %>
            <%= g.label :level_gr_8_to_9, "Grade 8-9 (Standard 6-7)" %>
                <br/>

            <%= g.radio_button :level, :gr_10_to_11 %>
            <%= g.label :level_gr_9_to_10, "Grade 10-11 (Standard 8-9)" %>
                <br/>

            <%= g.radio_button :level, :some_tertiary %>
            <%= g.label :level_high_school, "Completed High school" %>
                <br/>

            <%= g.radio_button :level, :some_tertiary %>
            <%= g.label :level_some_tertiary, "Some Tertiary Education" %>
                <br/>

            <%= g.radio_button :level, :completed_tertiary %> 
            <%= g.label :level_completed_tertiary, "Completed Tertiary Education" %>
                <br/>
    </div>

    <div class="form-actions">
            <%= g.submit 'continue', :class =>  'btn btn-lg btn-success' %>
    </div>
</div>
<% end %>

